<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package strict-method-invocation="false" name="example" extends="struts-default">
        <interceptors>
            <interceptor name="simple" class="SimpleInterceptor"></interceptor>
        </interceptors>
        <default-action-ref name="underConstruction"></default-action-ref>
        <global-results>
            <result name="login">/login.jsp</result>
        </global-results>
        <action name="login" class="SaludarUsuario">
            <interceptor-ref name="defaultStack"></interceptor-ref>
            <interceptor-ref name="simple"></interceptor-ref>
            <result name="success">/saludoUsuario.jsp</result>
            <result name="input">/login.jsp</result>
        </action>
        <action name="underConstruction" class="com.opensymphony.xwork2.ActionSupport">
            <result>/uc.html</result>
        </action>
    </package>
</struts>