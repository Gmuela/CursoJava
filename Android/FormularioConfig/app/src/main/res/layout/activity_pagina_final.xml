<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pagina_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cursomaana.formularioconfig.PaginaFinal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Bienvenido "
            android:id="@+id/bienvenido"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_nombre"
            android:text="Nombre del usuario"
            android:layout_weight="0.10" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_androide"
            android:id="@+id/imageView"
            android:layout_weight="0.52" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:rowCount="7">

            <TextView
                android:text="Su configuración es la siguiente:"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/textView2" />

            <TextView
                android:text="Privacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:id="@+id/priv" />

            <TextView
                android:text="Resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_privacidad"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="1" />

            <TextView
                android:text="Resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_battery"
                android:layout_weight="1"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="0dp"
                android:text="Ahorro batería"
                android:id="@+id/ahorro"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:text="Tono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_tono_label"
                android:layout_row="6"
                android:layout_column="0" />

            <TextView
                android:text="Tema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_tema_label"
                android:layout_row="5"
                android:layout_column="0" />

            <TextView
                android:text="Resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_tono"
                android:layout_row="6"
                android:layout_column="1" />

            <TextView
                android:text="Resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_tema"
                android:layout_row="5"
                android:layout_column="1" />

            <TextView
                android:text="Resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_red"
                android:layout_row="4"
                android:layout_column="1" />

            <TextView
                android:text="Red Móvil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_red_label"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:text="Solo WIFI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_wifi_label"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:text="Resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f_wifi" />
        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:showDividers="middle"
            android:divider="?android:attr/dividerVertical">

            <Button
                android:text="Volver al inicio"
                android:layout_width="wrap_content"
                android:layout_height="128dp"
                android:id="@+id/f_volver"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
