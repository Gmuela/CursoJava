<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pantalla_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cursomaana.example.com.androidexamen.PantallaFinalActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Registro Satisfactorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_registro"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="30sp" />

        <TextView
            android:text="Nombre de usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_final"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <TextView
            android:text="gmuela@email.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_final"
            android:textAlignment="center" />

        <TextView
            android:text="País de origen: España"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nacionalidad_final"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:text="Sexo: Hombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sexo_final"
            android:textAlignment="center" />

        <TextView
            android:text="Aficiones: Música, Cine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aficiones_final"
            android:textAlignment="center" />

        <TextView
            android:text="123456"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_final"
            android:textAlignment="center" />

    </LinearLayout>
</RelativeLayout>
