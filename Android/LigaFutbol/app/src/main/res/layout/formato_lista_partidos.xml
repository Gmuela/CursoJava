<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_grid"
        android:rowCount="5">

        <ImageView
            android:layout_width="42dp"
            app:srcCompat="?android:attr/fingerprintAuthDrawable"
            android:id="@+id/imagen_local"
            android:layout_weight="0.56"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="249dp"
            android:layout_height="78dp"
            android:gravity="center"
            android:weightSum="1"
            android:layout_row="0"
            android:layout_column="1">

            <TextView
                android:text="Equipo Local"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/nombre_equipo_local"
                android:textAlignment="center" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="14/03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fecha_partido"
                    android:textAlignment="center" />

                <TextView
                    android:text="20:45"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/hora_partido"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:text="Equipo Visitante"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/nombre_equipo_visitante"
                android:textAlignment="center" />

        </LinearLayout>

        <ImageView
            app:srcCompat="?android:attr/fingerprintAuthDrawable"
            android:id="@+id/imagen_visitante"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_height="42dp"
            android:layout_width="42dp"
            android:layout_marginTop="20dp"/>

    </GridLayout>
</LinearLayout>