<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_equipo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cursomaana.ligafutbol.activities.DetalleEquipo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:text="Real Madrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_equipo"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_madrid"
            android:id="@+id/imagen_escudo"
            android:layout_weight="0.20" />

        <TextView
            android:text="Bernabeu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_estadio"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_estadio_madrid"
            android:id="@+id/imagen_estadio"
            android:layout_weight="0.14" />

        <TextView
            android:text="Zidane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_entrenador"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/entrenador_zidane"
            android:id="@+id/imagen_entrenador"
            android:layout_weight="0.17" />

    </LinearLayout>
</RelativeLayout>
